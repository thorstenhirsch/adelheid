<p id="notice"><%= notice %></p>

<h1>Source Vcs Repositories</h1>

<table>
  <thead>
    <tr>
      <th>Server</th>
      <th>Name</th>
      <th>Shortname</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @source_vcs_repositories.each do |source_vcs_repository| %>
      <tr>
        <td><%= source_vcs_repository.server_id %></td>
        <td><%= source_vcs_repository.name %></td>
        <td><%= source_vcs_repository.shortname %></td>
        <td><%= link_to 'Show', source_vcs_repository %></td>
        <td><%= link_to 'Edit', edit_source_vcs_repository_path(source_vcs_repository) %></td>
        <td><%= link_to 'Destroy', source_vcs_repository, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

