<p id="notice"><%= notice %></p>

<h1>Configurations</h1>

<table>
  <thead>
    <tr>
      <th>Use authentication</th>
      <th>Authentication type</th>
      <th>Http user</th>
      <th>Http password digest</th>
      <th>Create artefacts on the fly</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @configurations.each do |configuration| %>
      <tr>
        <td><%= configuration.use_authentication %></td>
        <td><%= configuration.authentication_type %></td>
        <td><%= configuration.http_user %></td>
        <td><%= configuration.http_password_digest %></td>
        <td><%= configuration.create_artefacts_on_the_fly %></td>
        <td><%= link_to 'Show', configuration %></td>
        <td><%= link_to 'Edit', edit_configuration_path(configuration) %></td>
        <td><%= link_to 'Destroy', configuration, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

