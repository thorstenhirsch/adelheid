<p id="notice"><%= notice %></p>

<h1>Environment Groups</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @environment_groups.each do |environment_group| %>
      <tr>
        <td><%= environment_group.name %></td>
        <td><%= link_to 'Show', environment_group %></td>
        <td><%= link_to 'Edit', edit_environment_group_path(environment_group) %></td>
        <td><%= link_to 'Destroy', environment_group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

